<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include("includes/navbar"); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3">
			<div class="card-header"><%= title %></div>
			<div class="card-body table-responsive">
				<a href="/chude/them" class="btn btn-primary mb-2"><i class="bi bi-plus-lg"></i> Thêm mới</a>
				<table class="table table-bordered table-hover table-sm mb-0">
					<thead>
						<tr>
							<th width="5%">#</th>
							<th>Tên chủ đề</th>
							<th width="5%">Sửa</th>
							<th width="5%">Xóa</th>
						</tr>
					</thead>
					<tbody>
						<% var stt = 1; %>
						<% chude.forEach(function(cd){ %>
							<tr>
								<th><%= stt++ %></th>
								<td><%= cd.TenChuDe %></td>
								<td class="text-center"><a href="/chude/sua/<%= cd._id %>"><i class="bi bi-pencil-square"></i></a></td>
								<td class="text-center"><a href="/chude/xoa/<%= cd._id %>" onclick="return confirm('Bạn có muốn xóa chủ đề <%= cd.TenChuDe %> không?');"><i class="bi bi-trash text-danger"></i></a></td>
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
		
		<!-- Footer -->
		<%- include("includes/footer"); %>
	</div>
	
	<%- include("includes/javascript"); %>
</body>

</html>